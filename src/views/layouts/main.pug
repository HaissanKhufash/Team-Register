doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        //- Google fonts
        link(rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200")
        //- bootstrap@5.3.0
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous")
        //- My styles
        link(rel="stylesheet", href="/stylesheets/main.css")
        title Leagues
    body
        //- Navigation features...
        nav.navbar.navbar-expand-lg.bg-body-tertiary.sticky-top.bg-dark.bg-black(data-bs-theme="dark")
            div.container
                a.navbar-brand(href='/') Leagues
                button.navbar-toggler(type='button', data-bs-toggle='collapse', data-bs-target='#navbarNavDropdown', aria-controls='navbarNavDropdown', aria-expanded='false', aria-label='Toggle navigation')
                    span.navbar-toggler-icon
                ul.navbar-nav.ms-auto
                    li.nav-item
                        a.nav-link.active(aria-current='page', href='/') Home
                    li.nav-item
                        a.nav-link(href='/about') About

                if !user
                    ul.navbar-nav
                        li.nav-item
                            a.nav-link(href='/users/sign-in') Sign in
                        li.nav-item
                            a.nav-link(href='/users/sign-up') Sign up
                else
                    .dropdown
                        a.btn.btn-secondary.dropdown-toggle(href='#', role='button', data-bs-toggle='dropdown', aria-expanded='false')
                            | Features
                        ul.dropdown-menu
                            li
                                a.dropdown-item(href='/teams/add') Add team
                            li
                                a.dropdown-item(href='/teams') View teams
                            li
                                a.dropdown-item(href='/users/log-out') Log out

        if success_msg[0]
            div(class="alert alert-success alert-dismissible fade show" role="alert")
                span= success_msg[0]
                button.btn-close(type='button', data-bs-dismiss='alert', aria-label='Close')

        if err_msg[0]
            div(class="alert alert-danger alert-dismissible fade show" role="alert")
                span= err_msg[0]
                button.btn-close(type='button', data-bs-dismiss='alert', aria-label='Close')
                
        if error[0]
            div(class="alert alert-danger alert-dismissible fade show" role="alert") 
                span= error[0]
                button.btn-close(type='button', data-bs-dismiss='alert', aria-label='Close')

        block content
            block main


        script(script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous")