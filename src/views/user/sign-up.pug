extends ../layouts/main.pug

block content

    block main
        main.container.p-5
            section.jumbotron.card
                div.card-header.text-center
                    h2.display-4 Register account
                form.container.card-body.d-flex.flex-column.align-items-center(action="/users/sign-up" method="POST")
                    input.form-control.mt-1(type="text" name="name" placeholder="Type your name" required)
                    input.form-control.mt-1(type="email" name="email" placeholder="Type your email" required)
                    input.form-control.mt-1(type="password" name="password" placeholder="Type your password" required)
                    input.form-control.mt-1(type="password" name="confirmPassword" placeholder="Validate password" required)
                    input.btn.btn-primary.mt-1(type="submit" name="send" value="Send")

                a.btn.btn-secondary(href="/users/sign-in")
                        i.bi.bi-box-arrow-right