extends ../layouts/main.pug

block content

    block main
        main.container.p-5
            section.jumbotron.card
                div.card-header.text-center
                    h2.display-4 Create team
                div.card-body
                    form.container.d-flex.flex-column(action="/teams/new-team" method="POST")
                        input.form-control.mt-1(type="text" name="team" placeholder="Team" required)
                        input.form-control.mt-1(type="number" name="titles" placeholder="Titles" min="0" required)
                        input.form-control.mt-1(type="text" name="kitCls" placeholder="Kit colors" required)
                        input.form-control.mt-1(type="text" name="crrMng" placeholder="Current manager" required)
                        input.btn.btn-primary.align-self-center.mt-1(type="submit" name="send" value="Send")
